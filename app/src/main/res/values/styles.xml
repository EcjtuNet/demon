<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionOverflowButtonStyle">@style/rxActionBarOverFlowerButtonStyle</item>
    </style>

    <style name="rxActionBarOverFlowerButtonStyle">
        <item name="android:src">@drawable/gruid</item>
        <item name="android:paddingRight">@dimen/action_bar_right_margin</item>
    </style>

    <style name="customProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dip</item>
        <item name="android:layout_height">21dip</item>
        <item name="android:layout_gravity">center</item>
    </style>

</resources>
